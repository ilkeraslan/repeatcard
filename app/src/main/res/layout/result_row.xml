<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardResultRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/colorGrey"
        app:cardCornerRadius="16dp">

        <TextView
            android:id="@+id/questionNumberTagResultRow"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/question_no"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/questionNumberResultRow"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp" />

        <TextView
            android:id="@+id/questionTagResultRow"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="@string/correct_answer"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/questionTextResultRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/answerTagResultRow"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:text="@string/your_answer"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/answerTextResultRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="64dp" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>
