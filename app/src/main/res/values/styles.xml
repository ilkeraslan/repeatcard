<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DirectoryTheme" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="text_size">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_style" parent="text_size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="review_text" parent="text_size">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="review_text_label" parent="review_text">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="review_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorBlack</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
